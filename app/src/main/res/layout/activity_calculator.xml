<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.mineproject.calculatorinkotlin.CalculatorActivity">

    <TextView
        android:id="@+id/numText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Enter your number"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="19sp"
        android:background="#4be1f528"
        />

    <LinearLayout
        android:id="@+id/clearNenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numText"
        >


    <Button
        android:id="@+id/clearText"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Clear"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="#5bebe4ec"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/equalButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="="
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="#5bebe4ec"
        android:layout_weight="1"
        />

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="22sp"
        android:background="#5b1c98f1"
        android:layout_below="@+id/clearNenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="22sp"
        android:background="#5b1c98f1"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="22sp"
        android:background="#5b1c98f1"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/clearNenter"
        android:layout_toEndOf="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:background="#5b1c98f1"
        android:text="8"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:background="#5b1c98f1"
        android:text="5"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button5"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:background="#5b1c98f1"
        android:text="2"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/clearNenter"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:background="#5b1c98f1"
        android:text="9"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button9"
        android:layout_toEndOf="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:background="#5b1c98f1"
        android:text="6"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#5b1c98f1"
        android:text="3"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_above="@+id/mathsOperators"
        android:background="#5b1c98f1"
        android:text="0"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_above="@+id/button0"
        android:background="#5b1c98f1"
        android:text="."
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/mathsOperators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignParentBottom="true"
        >

    <Button
        android:id="@+id/plusButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="+"
        android:textSize="25sp"
        android:layout_weight="1"
        android:background="#a3ffa4"
        />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="-"
        android:textSize="25sp"
        android:layout_weight="1"
        android:background="#a3ffa4"
        />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="*"
        android:textSize="25sp"
        android:layout_weight="1"
        android:background="#a3ffa4"
        />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="/"
        android:textSize="25sp"
        android:layout_weight="1"
        android:background="#a3ffa4"
        />   

    </LinearLayout>


    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#4be1f528"
        />




</RelativeLayout>
